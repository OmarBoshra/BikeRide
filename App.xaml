<Application x:Class="BikeRide.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BikeRide.Public_classes"

             Startup="Application_Startup"
             Exit="Application_Exit"
             StartupUri="RentDetails.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/Icons.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/Colors.xaml" />

                <ResourceDictionary Source="ResourceDictionaries/TextLabels.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/ListTemplates.xaml" />




            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Blue}" />

            <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
        </ResourceDictionary>

    
    </Application.Resources>
</Application>
