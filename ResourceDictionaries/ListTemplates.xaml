<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BikeRide.ResourceDictionaries">

   
        <DataTemplate x:Key="CustomerTemplate">
            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
            <Image x:Name="studentImage" Margin ="0,0,4,0" Source="{Binding ImagePath}" Width="40" Height="40"/>
                <TextBlock>
                    <Run Text= "{Binding Name}" FontWeight="Bold"/><LineBreak/>
                    <Run Text= "Phone Number"/><LineBreak/>
                    <Run Text= "{Binding Phone}" FontWeight="SemiBold"/></TextBlock>
            </StackPanel>
        </DataTemplate>
 

</ResourceDictionary>